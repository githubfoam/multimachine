FROM ubuntu:16.04
# preps
RUN apt-get update && \
	apt-get install -y default-jre sudo curl zip openssl build-essential python-software-properties && \
	apt-get clean;

# Default environment variables
# Default system timezone (Tokyo)
ENV TIMEZONE=GMT+09
# Used to configure OS language support
ENV LANGUAGE=en_US.UTF-8
# entrypoint folders

WORKDIR /opt

RUN sudo adduser sdn --system --group
RUN wget http://repo1.maven.org/maven2/org/onosproject/onos-releases/2.0.0/onos-2.0.0.tar.gz
RUN tar -vxzf onos-2.0.0.tar.gz
RUN mv onos-2.0.0 onos
RUN sudo chown -R sdn:sdn onos
